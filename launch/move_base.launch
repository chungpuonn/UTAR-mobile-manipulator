<launch>
  <!-- Arguments -->
  <arg name="model" default="burger"/>
  <arg name="cmd_vel_topic" default="cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="true"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find mobile_arm_moveit_perception_config)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find mobile_arm_moveit_perception_config)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find mobile_arm_moveit_perception_config)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find mobile_arm_moveit_perception_config)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find mobile_arm_moveit_perception_config)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find mobile_arm_moveit_perception_config)/param/dwa_local_planner_params.yaml" command="load" />
    <remap from="$(arg cmd_vel_topic)" to="diff_drive_controller/cmd_vel"/>  
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
